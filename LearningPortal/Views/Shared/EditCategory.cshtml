
<div class="modal fade" id="editModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Category</h4>
                <button type="button" class="close ml-2" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <form id="myForm" method="post" enctype="multipart/form-data">
                    <label for="title" class="col-md-3 col-form-label form-label">Category Name</label>
                    <div class="col-md-6">
                        <input id="catName" type="text" class="form-control" value="@ViewBag.check" name="Catname" required placeholder="Category Name">
                    </div>
                    <label for="title" class="col-md-3 col-form-label form-label">Category Image</label>
                    @*<input type="file" id="catImage" name="@ViewBag.Image" value="@ViewBag.Image" /><br /><br />*@
                    <input type="file" name="@ViewBag.Image" id="catImage" class="form-control" value="@ViewBag.Image">


                    <button class="btn btn-primary editCat" type="submit" id="upbtn" data-dismiss="modal"><i class="material-icons"></i>Save</button>
                    <button type="button" class="btn btn-default canclebutton" data-dismiss="modal">Cancel</button>
                </form>

                @*<div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger editCat" data-dismiss="modal">Save</button>
                    </div>*@
            </div>
        </div>
    </div>
</div>

