
@model IEnumerable<LearningPortal.Models.Courses>

 <div class="card-columns row courseList" id="courBox">
    @{ foreach (var item in Model)
        {

            <div class="carousel-item col-sm-6 col-md-4 col-lg-3 active">
                <a href="#">
                    <div class="card">

                        <a href="student-take-course.html">
                            <img src="~/assets/images/@item.Image"
                                 alt="Card image cap"
                                 style="width:100%;">
                        </a>
                        <div class="card-header text-center">
                            <h5 class="card-title m-0" style="text-align:center; font-size:13px;">@item.CourseName</h5>
                            <div>
                                <div class="mt-3"></div>
                                <small class="text-muted">DateUploaded: </small>
                                <small class="text-muted"> @item.Time.ToString()</small>
                            </div>
                        </div>
                        <div class="card-body">

                            <div style="display: flex; justify-content: center;">

                                <div class="btn-group btn-group-sm">
                                    <a href="#"
                                       class="btn btn-white active"><i class="material-icons">create</i></a>
                                    <a href="#"
                                       class="btn btn-white"><i class="material-icons">delete</i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

        }
    }
</div>