<div class="modal fade" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Delete SubCategory</h4>
                <button type="button" class="close ml-2" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this!</p>
                <input type="hidden" name="SubCategory" id="subCatId" value="@ViewBag.SubCatId" />
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger deleteSubCat" data-dismiss="modal">Delete</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $(".deleteSubCat").click(function () {
            var valdelete = $("#subCatId").val();

            $.ajax({
                type: "POST",
                url: "/Admin/DeleteSubCat",

                data: {
                    SubCatid: valdelete
                },
                success: function (response) {

                    alert("Deleted");
                    $("#row_" + valdelete).remove();

                },
                error: function () {

                }
            })


        });
    })
</script>
