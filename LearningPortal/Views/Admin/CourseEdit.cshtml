
@{
    ViewBag.Title = "CourseEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#AddSecBtn').on('click', function () {

            var newListItem = document.createElement('li');
            newListItem.className += "nestable-item nestable-item-handle";
            //div.setAttribute('data - id', '2');

            var div = document.createElement('div');
            div.className += "nestable-content";
            div.setAttribute('id', 'Nested_Card');

            var div2 = document.createElement('div');
            div2.className += "card-title h6 mb-0";
            div2.setAttribute('id', "Nested_Card");
            $(document.getElementById("First_ul")).append(newListItem);
            $('li').append(div);
            $('div').append(div2);
            console.log("+btn")
        });
    });
</script>








