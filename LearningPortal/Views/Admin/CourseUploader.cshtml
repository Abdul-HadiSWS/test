
<div class="card-header">
    <h4 class="card-title">Lessons</h4>
</div>
<div class="card-body">
    <p>
        @{ using (Html.BeginForm("CourseUploader", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                <input type="file" name="files" />

                <button class="btn btn-primary" type="submit"><i class="material-icons"></i>Upload Course</button>
            }
        }
        @ViewBag.success
        @{
            foreach ( string val in ViewBag.PData )
            {
                <h1>@val</h1>
            }
        }
    </p>
