<div class="modal fade" id="videoModal">
    <div class="modal-dialog" style=" margin-top: 13%;margin-left: 30%;">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close ml-2" data-dismiss="modal" id="close">&times;</button>
            </div>

            <div class="modal-body">
                <video id="vemvo-player" controls width="100%" height="100%">

                    @{
                        var src = ViewBag.Src;
                        var type = ViewBag.type;
                        
                    }
                    <source src="~/assets/@src" type="@type" />


                </video>
            </div>
        </div>
    </div>
</div>
<script>
        $(document).ready(function () {

            $("#close").click(function () {
         
                $("#vemvo-player").remove();


            });
        })
</script>


